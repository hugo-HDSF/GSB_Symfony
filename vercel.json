{
  "build": {
    "env": {
      "PHP_VERSION": "8.1"
    }
  },
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel/php@0.2.0"
    }
  },
  "routes": [
    { "src": "/login", "dest": "http://localhost:8000/login" },
    { "src": "/index\\.php", "dest": "/index.php" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}
